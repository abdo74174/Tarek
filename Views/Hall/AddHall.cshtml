@model Grand_Hall.Models.Hall

@{
    ViewData["Title"] = Model == null ? "Add" : "Edit";
}

<h1>@ViewData["Title"] Hall</h1>

<p>
    <a asp-action="AddHall" class="btn btn-success">Add New Hall</a>
</p>

@if (ViewData["Message"] != null)
{
    <p class="alert alert-info">@ViewData["Message"]</p>
}

<form asp-action="AddHall" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="HallsName" class="control-label"></label>
        <input asp-for="HallsName" class="form-control" />
        <span asp-validation-for="HallsName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath" class="control-label">Image</label>
        <input type="file" name="ImagePath" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
